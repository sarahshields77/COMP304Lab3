<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/assignment_background"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:src="@drawable/college_logo"
            android:contentDescription="@string/collegelogo"
            />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/person_circle"
            android:contentDescription="@string/personIcon"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="313dp"
            >
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/testIDInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/entertestIDinput"
            android:textColorHint="@color/hintgray"
            android:textColor="@color/white"
            tools:layout_editor_absoluteY="325dp"
            android:textSize="18sp"
            android:background="@drawable/rounded_corner"
            android:padding="18dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="428dp">
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/patientTestIDInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/enterpatientID"
            android:textColorHint="@color/hintgray"
            android:textColor="@color/gray"
            tools:layout_editor_absoluteY="374dp"
            android:textSize="18sp"
            android:background="@drawable/rounded_corner"
            android:padding="18dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="313dp"
            >
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/testNurseIDInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/enternurseID"
            android:textColorHint="@color/hintgray"
            android:textColor="@color/white"
            tools:layout_editor_absoluteY="325dp"
            android:textSize="18sp"
            android:background="@drawable/rounded_corner"
            android:padding="18dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="428dp">
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/BPLInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/bpl"
            android:textColorHint="@color/hintgray"
            android:textColor="@color/gray"
            tools:layout_editor_absoluteY="374dp"
            android:textSize="18sp"
            android:background="@drawable/rounded_corner"
            android:padding="18dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/BPHInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/bph"
            android:textColorHint="@color/hintgray"
            android:textColor="@color/gray"
            tools:layout_editor_absoluteY="374dp"
            android:textSize="18sp"
            android:background="@drawable/rounded_corner"
            android:padding="18dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/temperatureInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/temperatureinput"
            android:textColorHint="@color/hintgray"
            android:textColor="@color/gray"
            tools:layout_editor_absoluteY="374dp"
            android:textSize="18sp"
            android:background="@drawable/rounded_corner"
            android:padding="18dp"/>

        <Button
            android:id="@+id/addNewTestButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/white"
            android:text="@string/addpatienttestbutton"
            android:textColor="#666666"
            android:padding="13dp"
            android:textSize="17sp"
            tools:layout_editor_absoluteX="159dp"
            tools:layout_editor_absoluteY="580dp"
            />


    </LinearLayout>

</RelativeLayout>